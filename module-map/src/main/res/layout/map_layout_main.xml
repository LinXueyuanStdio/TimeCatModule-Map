<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--左上-->
    <!--    <LinearLayout-->
    <!--        android:id="@+id/msg_box"-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="200dp"-->
    <!--        android:orientation="vertical"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->
    <!--右上-->
    <com.google.android.material.chip.Chip
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="@dimen/spacing_tiny"
        android:text="40 / 40"
        app:chipIcon="@drawable/ic_star"
        app:closeIcon="@drawable/ic_add"
        app:closeIconVisible="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--左中-->
    <LinearLayout
        android:id="@+id/zoom_slider"
        android:layout_width="24dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/zoom_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/master_icon_view_hint"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ImageContrastCheck" />

        <com.timecat.module.map.view.VerticalSeekBarWrapper
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.timecat.module.map.view.VerticalSeekBar
                android:id="@+id/seek_zoom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:seekBarRotation="CW270" />
        </com.timecat.module.map.view.VerticalSeekBarWrapper>

        <TextView
            android:id="@+id/zoom_sub"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/master_icon_view_hint"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>
    <!--右中-->

    <!--左下-->
    <ImageView
        android:id="@+id/map_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/close"
        android:padding="@dimen/spacing_tiny"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.timecat.layout.ui.standard.textview.HintTextView
        android:id="@+id/map_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:hint="探索度 20%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/map_icon"
        app:msg="大地图" />
    <!--右下-->
    <ImageView
        android:id="@+id/close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/close"
        android:padding="@dimen/spacing_tiny"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
